<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ViewModel="clr-namespace:Financier.Desktop.MonoWizard.ViewModel" 
                    xmlns:View="clr-namespace:Financier.Desktop.MonoWizard.View">
    <DataTemplate DataType="{x:Type ViewModel:Page1VM}">
        <View:Page1/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:Page2VM}">
        <View:Page2 />
    </DataTemplate>

    <DataTemplate DataType="{x:Type ViewModel:Page3VM}">
        <View:Page3 />
    </DataTemplate>

    <Style TargetType="{x:Type Button}" x:Key="moveNextButtonStyle">
        <Setter Property="Content" Value="Next" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=IsOnLastPage}" Value="True">
                <Setter Property="Content" Value="Finish" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFF0F0F0"/>
</ResourceDictionary>