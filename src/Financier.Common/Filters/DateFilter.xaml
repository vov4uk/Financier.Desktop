<UserControl x:Class="Financier.Common.Filters.DateFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="120">
    <GroupBox Header="Date"
              BorderThickness="0">
        <DatePicker SelectedDate="{Binding DateFilter}"
                    Margin="2 0"/>
    </GroupBox>
</UserControl>