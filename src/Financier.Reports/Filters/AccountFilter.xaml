<UserControl x:Class="Financier.Reports.Reports.Filters.AccountFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common"
             MinWidth="140">
    <GroupBox Header="Account">
    <ComboBox Grid.Column="1"
              DisplayMemberPath="Title"
              Margin="2 0"
              SelectedItem="{Binding Path=Account}"
              ItemsSource="{Binding Source={x:Static fcrd:DbManual.Account}, Mode=OneWay}" />
  </GroupBox>
</UserControl>