<UserControl x:Class="Financier.Reports.Reports.Filters.CategoryFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common"
             MinWidth="140">
    <GroupBox Header="Category">
    <ComboBox DisplayMemberPath="Title"
              SelectedItem="{Binding Path=Category}"
              ItemsSource="{Binding Source={x:Static fcrd:DbManual.Category}, Mode=OneWay}" />
  </GroupBox>
</UserControl>