<UserControl x:Class="Financier.Reports.Reports.Filters.TopCategoryFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common"
             MinWidth="140">
    <GroupBox Header="Top category">
        <ComboBox DisplayMemberPath="Title"
                  Margin="2 0"
                  SelectedItem="{Binding Path=TopCategory}"
                  ItemsSource="{Binding Source={x:Static fcrd:DbManual.TopCategories}, Mode=OneWay}" />
    </GroupBox>
</UserControl>
