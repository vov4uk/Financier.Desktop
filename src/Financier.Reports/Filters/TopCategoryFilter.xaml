<UserControl x:Class="Financier.Reports.Reports.Filters.TopCategoryFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common" xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
             MinWidth="140">
    <GroupBox Header="Top category">
        <ComboBox SelectedItem="{Binding Path=TopCategory}"
                  Margin="2 0"
                  TextSearch.TextPath="Title"
                  ItemsSource="{Binding Source={x:Static fcrd:DbManual.TopCategories}, Mode=OneWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="{x:Type fcrd:CategoryModel}">
                    <emoji:TextBlock x:Name="Txt" Text="{Binding Title}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </GroupBox>
</UserControl>
