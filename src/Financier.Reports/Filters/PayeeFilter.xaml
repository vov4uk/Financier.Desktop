<UserControl x:Class="Financier.Reports.Reports.Filters.PayeeFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common"
             MinWidth="140">
    <GroupBox Header="Payee">
    <ComboBox DisplayMemberPath="Title"
              Margin="2 0"
              SelectedItem="{Binding Path=Payee}"
              ItemsSource="{Binding Source={x:Static fcrd:DbManual.Payee}, Mode=OneWay}" />
  </GroupBox>
</UserControl>