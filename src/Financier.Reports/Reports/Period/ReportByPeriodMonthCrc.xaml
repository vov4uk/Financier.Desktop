<UserControl x:Class="Financier.Reports.Reports.ReportByPeriodMonthCrc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:filters="clr-namespace:Financier.Reports.Reports.Filters">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <filters:CurrencyFilter Margin="4" />
            <filters:AccountFilter Margin="4" />
            <filters:CategoryFilter Margin="4" />
            <filters:ProjectFilter Margin="4" />
            <filters:PayeeFilter Margin="4" />
            <filters:StartYearMonthFilter Margin="4" />
            <filters:EndYearMonthFilter Margin="4" />
            <Button Grid.Column="1"
                    Margin="4"
                    Width="150"
                    HorizontalAlignment="Left"
                    Content="Сформировать"
                    Command="{Binding Path=RefreshDataCommand}" />
        </DockPanel>
        <oxy:PlotView Grid.Row="1" Model="{Binding PlotModel}" />
    </Grid>
</UserControl>