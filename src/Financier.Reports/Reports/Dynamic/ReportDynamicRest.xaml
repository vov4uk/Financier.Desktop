<UserControl x:Class="Financier.Reports.Reports.ReportDynamicRest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fcrd="clr-namespace:Financier.Reports.Common"
             xmlns:filters="clr-namespace:Financier.Reports.Reports.Filters"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <DockPanel Grid.Row="0" Grid.ColumnSpan="2">
                <filters:StartYearMonthFilter Margin="4" />
                <filters:EndYearMonthFilter Margin="4" />
                <Button Grid.Column="1" Margin="4" HorizontalAlignment="Left" Width="150" Content="Сформировать"
                Command="{Binding Path=RefreshDataCommand}" />
            </DockPanel>

        <fcrd:DataGridAutoHeaders Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Path=ReportData}" />
        <oxy:PlotView Grid.Row="1" Grid.Column="1" Model="{Binding PlotModel}" />
  </Grid>
</UserControl>